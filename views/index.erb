<ul>
  <% @files.each do |file_name| %>
    <li>
      <a href="/documents/<%= file_name %>"><%= file_name %></a>
      <a href="/documents/<%= file_name %>/edit">Edit</a>
      <a><form class="inline" method="post" action="/documents/<%= file_name %>/destroy">
        <button type="submit">Delete</button>
      </form></a>
    </li>
  <% end %>
</ul>

<p><a href="/documents/new">New Document</a></p>